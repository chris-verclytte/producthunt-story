{
  "root": true,
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "singleQuote": true,
        "trailingComma": "es5"
      }
    ],
    "no-use-before-define": [
      "error",
      "nofunc"
    ],
    "eol-last": "error",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-undefined": "error",
    "no-param-reassign": "warn",
    "no-underscore-dangle": "off",
    "consistent-return": "off",
    "require-jsdoc": "warn",
    "valid-jsdoc": "warn"
  },
  "globals": {
    "expect": true
  },
  "env": {
    "mocha": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 9
  }
}